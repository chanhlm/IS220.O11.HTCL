@model List<object>

@{
    ViewData["Title"] = "Admin account";
}

            <!-- Start content -->
            <div class="content">

                <div class="">
                    <div class="page-header-title">
                        <h4 class="page-title">Quản lý tài khoản</h4>
                    </div>
                </div>

                <div class="page-content-wrapper ">

                    <div class="container-fluid">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">

                                        <h4 class="m-b-30 m-t-0">Tài khoản khách hàng</h4>

                                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>Mã tài khoản</th>
                                                    <th>Tên tài khoản</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Mã khuyến mãi</th>
                                                    <th>Số điện thoại</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Điểm</th>
                                                    <th>E-mail</th>
                                                    <th>Tình trạng</th>
                                                    <th>Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in ViewBag.listaccount)
                                                {
                                                <tr>
                                                    <td>@item.GetType().GetProperty("Matk").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Hoten").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Diachi").GetValue(item, null) </td>
                                                    
                                                        
                                                    <td>
                                                        @foreach (var item1 in ViewBag.uservoucher)
                                                        {
                                                            if (@item.GetType().GetProperty("Matk").GetValue(item, null) == @item1.GetType().GetProperty("Matk").GetValue(item1, null))
                                                            {
                                                                <p>@item1.GetType().GetProperty("Makm").GetValue(item1, null)</p>
                                                            }


                                                        }

                                                    </td>
                                                    
                                                    <td>@item.GetType().GetProperty("Sodt").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Ngaytao").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Diem").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Email").GetValue(item, null)</td>
                                                    <td>@item.GetType().GetProperty("Tinhtrang").GetValue(item, null)</td>
                                                    <td>
                                                        <a class="btn btn-danger" href="/Admin/KhoaTaiKhoan?Matk=@item.GetType().GetProperty("Matk").GetValue(item, null)" style="display: flex; justify-content: center;">Khóa</a>
                                                        <br />
                                                        <a class="btn btn-primary" href="/Admin/MoTaiKhoan?Matk=@item.GetType().GetProperty("Matk").GetValue(item, null)" style="display: flex; justify-content: center;"> Mở Khóa</a>
                                                    </td>
                                                    </tr>
                                                }
                                                </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- End Row -->

                    </div><!-- container -->

                </div> <!-- Page content Wrapper -->

            </div> <!-- content -->



