
@model List<object>
<!-- Start content -->
<div class="content">

    <div class="">
        <div class="page-header-title">
            <h4 class="page-title">Quản lý đơn hàng</h4>
        </div>
    </div>

    <div class="page-content-wrapper ">

        <div class="container-fluid">

            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="col-lg-6" style="margin-left: -10px;">
                                <form action="/Admin/FilterDonHang" method="post">
                                    <div class="form-group">
                                        <label>Đơn hàng trong khoảng thời gian</label>
                                        <div>
                                            <div class="input-daterange input-group" id="date-range">
                                                <input type="date" class="form-control" name="start" required />
                                                <span class="input-group-addon bg-primary text-white b-0">to</span>
                                                <input type="date" class="form-control" name="end" required /> &emsp;
                                                <button id="buttonTimKiem" type="submit" class="input-group-addon bg-primary text-white b-0">Tìm kiếm</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <h4 class="m-b-30 m-t-0">Danh sách đơn hàng</h4>

                            <table id="datatable-responsive" class="tableAllDate table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Mã ĐH</th>
                                        <th>Ngày lập</th>
                                        <th>Mã giỏ hàng</th>
                                        <th>Hình thức thanh toán</th>
                                        <th>Mã khuyến mãi</th>
                                        <th>Tổng tiền</th>
                                        <th>Thông tin người nhận</th>
                                        <th>Tình trạng thanh toán</th>
                                        <th>Tình trạng đơn hàng</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.listDonHang)
                                    {

                                        <tr>
                                            <td>@item.Madh</td>
                                            <td>@item.Ngaylap</td>
                                            <td>@item.Matk</td>
                                            <td>@item.Hinhthucthanhtoan</td>
                                            <td>@item.Makm</td>
                                            <td>@item.Tongtien</td>
                                            @foreach (var item1 in ViewBag.listaccount)
                                            {
                                                if (@item.Matk == @item1.Matk)
                                                {
                                                    <td>
                                                        @item1.Hoten, @item1.Sodt, @item1.Diachi
                                                    </td>
                                                }

                                            }
                                            <td>@item.Tinhtrangthanhtoan</td>
                                            <td>@item.Tinhtrangdonhang</td>
                                            <td style="display: flex;">
                                                <a href="VanChuyen?Madh=@item.Madh&Matk=@item.Matk" class="btn btn-primary" style="justify-content: center;">Xem chi tiết</a>
                                            </td>
                                        </tr>

                                    }


                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
            <!-- End Row -->
