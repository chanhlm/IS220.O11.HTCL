

<div class="content">

    <div class="">
        <div class="page-header-title">
            <h4 class="page-title">Quản lý đơn hàng</h4>
        </div>
    </div>

    <div class="page-content-wrapper ">

        <div class="container-fluid">

            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="m-b-30 m-t-0">Danh sách khuyến mãi</h4>

                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Mã KM</th>
                                        <th>Nội dung khuyến mãi</th>
                                        <th>% KM</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Tình trạng</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.khuyenmai)
                                    {
                                        <tr>
                                            <td>@item.GetType().GetProperty("Makm").GetValue(item,null)</td>
                                            <td>@item.GetType().GetProperty("Noidung").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("Phantram").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("Ngaybd").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("Ngaykt").GetValue(item, null)</td>
                                            <td>@item.GetType().GetProperty("TinhTrang").GetValue(item, null)</td>
                                            <td style="display: flex;">
                                                <a href="/Admin/CapNhap_KM?Id=@item.GetType().GetProperty("Makm").GetValue(item,null)" class="btn btn-primary" style=" justify-content: center;">Sửa</a>
                                                <a href="/Admin/Xoa_KM?Id=@item.GetType().GetProperty("Makm").GetValue(item,null)" class="btn btn-danger" style=" justify-content: center;">Xóa</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
